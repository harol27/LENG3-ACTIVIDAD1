@{
    ViewData["Title"] = "Contar Vocales";
}

<div style="display:flex; flex-direction:column; align-items:center; min-height:70vh;">
    <h2>Contar Vocales en una Frase</h2>
    <form method="post" style="margin-top:20px;">
        <input type="text" name="frase" placeholder="Escribe una frase" style="width:300px; padding:8px;" />
        <br /><br />
        <button type="submit">Contar</button>
    </form>

    @if (ViewBag.Resultado != null)
        @ViewBag.Resultado

    <br />
    <a href="/Home/Index" style="
        padding: 8px 16px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
    ">⬅️ Volver al Menú</a>
</div>
