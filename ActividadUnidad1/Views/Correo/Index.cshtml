@{
    ViewData["Title"] = "Usuario de Correo";
}

<div style="display:flex; flex-direction:column; align-items:center; min-height:70vh;">
    <h2>Extraer Usuario de un Correo</h2>
    <form method="post" style="margin-top:20px;">
        <input type="email" name="correo" placeholder="correo@ejemplo.com" style="width:250px; padding:8px;" />
        <br /><br />
        <button type="submit">Extraer</button>
    </form>

    @if (ViewBag.Resultado != null)
        @ViewBag.Resultado

    <br />
    <a href="/Home/Index" style="
        padding: 8px 16px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
    ">⬅️ Volver al Menú</a>
</div>
