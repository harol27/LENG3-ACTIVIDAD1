@{
    ViewData["Title"] = "Factura";
}

<div style="display:flex; flex-direction:column; align-items:center; min-height:70vh;">
    <h2>Factura con ITBIS o Descuento</h2>

    <form method="post" style="margin-top:20px; text-align:center;">
        <input type="number" step="any" name="monto" placeholder="Monto en RD$" required style="width:220px; padding:8px;" />
        <br /><br />
        <select name="opcion" style="width:220px; padding:8px;" required>
            <option value="ITBIS">Aplicar ITBIS (18%)</option>
            <option value="Descuento">Aplicar Descuento (15%)</option>
        </select>
        <br /><br />
        <button type="submit" style="
            padding: 8px 16px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
        ">
            Calcular
        </button>
    </form>

    @if (ViewBag.Total != null)
    {
        <div style="margin-top:20px; font-size:18px; color:#333; text-align:left;">
            <p><b>Subtotal:</b> RD$ @ViewBag.Subtotal</p>
            <p><b>@ViewBag.Detalle</b></p>
            <p><b>Total:</b> RD$ @ViewBag.Total</p>
        </div>
    }

    <br />
    <a href="/Home/Index" style="
        padding: 8px 16px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
    ">⬅️ Volver al Menú</a>
</div>
